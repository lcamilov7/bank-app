<%= simple_form_for client do |f| %>
  <%= f.input :name %>
  <%= f.input :document_type, as: :select, collection: Client.document_types.keys %>
  <%= f.input :document_number %>
  <%= f.input :phone %>
  <% if client.new_record? %><%= f.simple_fields_for :account do |p| %>
    <%= p.input :bank_id, as: :select, collection: Bank.all %>
  <% end %> <% end %>
  <%= f.submit %>
<% end %>
